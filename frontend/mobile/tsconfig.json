{
  "compilerOptions": {
    "jsx": "react-native",
    "target": "ES2020",
    "lib": [
      "dom",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "noEmit": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "plugins": [
      {
        "name": "ts-styled-plugin",
        "validProperties": [
          "shadow-color",
          "shadow-opacity",
          "shadow-offset",
          "shadow-radius",
          "padding-horizontal",
          "padding-vertical",
          "margin-vertical",
          "margin-horizontal",
          "tint-color",
          "aspect-ratio",
          "elevation"
        ]
      }
    ]
  },
  "extends": "expo/tsconfig.base"
}
